@model List<AssignRoleToUserViewModel>
@{
    ViewData["Title"] = "AssignRoleToUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Kullanıcıya Rol Atama</h2>

        <form asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.userId" method="post">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="@Model[i].Exist" id="check_@Model[i].Name" />
                    <label class="form-check-label" for="check_@Model[i].Name">@Model[i].Name</label>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input type="hidden" asp-for="@Model[i].Id" />
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Rol Ata" class="btn btn-success" />
                <a asp-controller="Home" asp-action="UserList" class="btn btn-warning">Kullanıcı Listesine Dön</a>
            </div>
        </form>
    </div>
</div>


