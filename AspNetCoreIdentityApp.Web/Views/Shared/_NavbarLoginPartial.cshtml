                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Add">Permission Add Or Update Page</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Delete">Permission Delete Page</a>
            </li>
           
        }

    </ul>
