@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}


<div class="col-md-8 offset-md-2">
    <div class="row">
        <h1>Şifremi Unuttum</h1>
        <br />
        <br />
        <br />
        @if (TempData["ForgotPasswordMessage"] != null)
        {
            <div class="alet alert-success mb-4" role="alert">
                @TempData["ForgotPasswordMessage"]
            </div>
        }
        <form asp-controller="Auth" asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
           
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp">
                @* <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> *@
            </div>
           

            <button type="submit" class="btn btn-primary">Doğrulama Gönder</button>
        </form>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

