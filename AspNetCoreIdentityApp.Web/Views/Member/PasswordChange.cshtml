@model PasswordChangeViewModel
@{
    ViewData["Title"] = "PasswordChange";
}

<div class="col-md-8 offset-md-2">
    <div class="row">
        <h1>Şifremi Unuttum</h1>
        <br />
        <br />
        <br />
        @if (TempData["PasswordChangeMessage"] != null)
        {
            <div class="alet alert-success mb-4" role="alert">
                @TempData["PasswordChangeMessage"]
            </div>
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label for="OldPassword" class="form-label">OldPassword</label>
                <input type="password" asp-for=OldPassword class="form-control" id="OldPassword">
            </div>
            <div class="mb-3">
                <label for="newpassword" class="form-label">NewPassword</label>
                <input type="password" asp-for=NewPassword class="form-control" id="newpassword">
            </div>
            <div class="mb-3">
                <label for="ConfirmNewPassword" class="form-label">ConfirmPassword</label>
                <input type="password" asp-for=ConfirmPassword class="form-control" id="ConfirmNewPassword">
            </div>




            <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
        </form>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




